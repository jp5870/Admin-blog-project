                <div class="row">
                    <form class="form-horizontal shadow-lg" enctype="multipart/form-data"  action="/api/blog/addblog" method="post">
                        <div class="card-body">
                            <h4 class="card-title">Personal Info</h4>
                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label">Blog_title</label>
                                <div class="col-sm-9">
                                    <input type="text" name="blog_title" class="form-control" id="fname" placeholder="First Name Here">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="lname" class="col-sm-3 text-right control-label col-form-label">Blog_name</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="blog_name" id="lname" placeholder="Last Name Here">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="lname" class="col-sm-3 text-right control-label col-form-label">blog_author</label>
                                <div class="col-sm-9">
                                    <input type="password" class="form-control" name="blog_author" id="lname" placeholder="Password Here">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="email1" class="col-sm-3 text-right control-label col-form-label">Blog_content</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="blog_content" id="email1" placeholder="Company Name Here">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="cono1"  class="col-sm-3 text-right control-label col-form-label">Blog_date</label>
                                <div class="col-sm-9">
                                    <input type="date" class="form-control" name="blog_date" id="cono1" placeholder="Contact No Here">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="cono1"  class="col-sm-3 text-right control-label col-form-label">Blog_img</label>
                                <div class="col-sm-9">
                                    <input type="file" class="form-control" name="blog_img" id="cono1" placeholder="Contact No Here">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="cono1" class="col-sm-3 text-right control-label col-form-label">Blog_descipsion</label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" name="blog_descipsion"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="border-top">
                            <div class="card-body">
